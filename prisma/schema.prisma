generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Estudiante {
  id                  Int      @id @default(autoincrement())
  nombre              String
  apellido            String
  numeroIdentificacion Int   @unique
  anio                 Int  @default(1)
  activo              Boolean  @default(true)
  carrera             Carrera? @relation(fields: [idCarrera], references: [id])
  idCarrera           Int?
  notas               Nota[]
}

model Profesor {
  id                  Int      @id @default(autoincrement())
  nombre              String
  apellido            String
  numeroIdentificacion String   @unique
}

model Carrera {
  id                  Int       @id @default(autoincrement())
  nombreCarrera       String    @unique
  materias            Materia[]
  duracion            Int
  estudiantes         Estudiante[]
}

model Materia {
  id                  Int       @id @default(autoincrement())
  nombreMateria       String
  anio                 Int 
  carrera             Carrera   @relation(fields: [idCarrera], references: [id])
  idCarrera           Int
  notas               Nota[]
}

model Nota {
  id                  Int       @id @default(autoincrement())
  estudiante          Estudiante @relation(fields: [idEstudiante], references: [id])
  idEstudiante        Int
  materia             Materia   @relation(fields: [idMateria], references: [id])
  idMateria           Int
  semestre            String
  nota                Float
}

model Administrador {
  id             Int       @id @default(autoincrement())
  nombre         String
  apellido       String
  email          String    @unique
  password       String    // Aquí se almacenará el hash de la contraseña
  creadoEn       DateTime  @default(now())
}